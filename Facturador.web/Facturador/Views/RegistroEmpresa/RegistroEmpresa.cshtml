
@{
    ViewBag.Title = "RegistroEmpresa";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html" ; charset="utf" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale1.0" />
    <title>Registro de Empresa </title>

    <!--CSS-->
    <link href="~/Content/style/css/bootstrap.min.css" rel="stylesheet" />
    <!--JS-->
    <script src="~/Content/style/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/style/js/bootstrap.min.js"></script>


</head>
    <body>
        <br /><br /><br />
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            <span><label><b>Registrar empresa</b></label></span>
                        </div>
                    </div>
                    <hr />

                    <div class="col-md-12">
                        <div class="col-md-3">
                            <img src="~/Content/img/img_logo/TuLogo.png" alt="Avatar" width="80px" class="img-circle" previsualizar />
                            <label for="imagen" class="input-label"><i class="fa fa-cloud-upload"></i>Subir imagen</label><input type="file" name="imagen" id="imagen" />
                        </div>
                        <div class="col-md-6">
                            <span><label><b>Razon Social</b></label></span>
                            <input type="text" class="form-control" id="txtrazonsocial" />
                        </div>

                        <div class="col-md-3">
                            <span><label><b>RUC:</b></label></span>
                            <input type="text" class="form-control" id="txtruc" />
                        </div>

                    </div>

                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-4">
                            <span><label><b>Email:</b></label></span>
                            <input type="text" class="form-control" id="txtrazonsocial" />
                        </div>

                        <div class="col-md-2">
                            <span><label><b>Pais:</b></label></span>
                            <select class="form-control" id="slpais">
                                <option value="value">text</option>
                            </select>

                        </div>

                        <div class="col-md-2">
                            <span><label><b>Moneda:</b></label></span>
                            <select class="form-control" id="slmoneda">
                                <option value="value">text</option>
                            </select>
                            <br />
                        </div>

                    </div>

                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-9">
                            <span><label><b>Direccion:</b></label></span>
                            <input type="text" class="form-control" id="txtdireccion" />
                            <br />
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-3">

                        </div>
                        <div class="col-md-3">
                            <span><label><b>¿Vende con impuestos?</b></label></span>
                        </div>

                        <div class="col-md-6">
                            SI <input type="radio" id="rdsi" />
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            NO <input type="radio" id="rdno" />
                               <br />
                        </div>
                    </div>

                </div>
            </div>
    
    </body>
    </html>

